<settings>
  <localRepository>.m2</localRepository>
  <servers>
    <server>
      <id>nexus-premise</id>
      <!-- <username>${env.NEXUS_CREDS_USR}</username>
      <password>${env.NEXUS_CREDS_PSW}</password> -->
      <username>${server.username}</username>
      <password>${server.password}</password>
    </server>
