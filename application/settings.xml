  <mirrors>
    <mirror>
      <id>nexus-premise</id>
      <name>Nexus On-Premise</name>
      <url>http://${env.NEXUS_FQDN}:${env.NEXUS_PORT}/repository/maven-public/</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
  </mirrors>
